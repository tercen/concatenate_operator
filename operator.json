{
  "name": "Concatenate",
  "description": "Merges the contents of multiple text columns into a single text string.",
  "tags": [
    "preprocessing",
    "text processing"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/concatenate_operator"
  ],
  "properties": [
    {
      "kind": "StringProperty",
      "name": "sep",
      "defaultValue": "_",
      "description": "Separator"
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Variable",
            "type": "string",
            "description": "Text values to concatenate",
            "ontologyMapping": "variable",
            "crosstabMapping": "row",
            "cardinality": "1..n",
            "factors": []
          }
        ],
        "axis": []
      }
    ],
    "outputSpecsV2": [
      {
        "kind": "OperatorJoinSpec",
        "joinOperators": [
          {
            "kind": "JoinOperator",
            "joinType": "left",
            "leftPair": {
              "kind": "ColumnPair",
              "lColumns": [
                "Variable"
              ],
              "rColumns": [
                "Variable"
              ]
            },
            "rightRelation": {
              "kind": "TableRelation",
              "attributes": [
                {
                  "kind": "Attribute",
                  "name": "concatenated",
                  "type": "string"
                }
              ]
            }
          }
        ]
      }
    ]
  }
}